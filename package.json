{
  "name": "xray-graphql-extension",
  "version": "0.1.3",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc",
    "lint": "tslint -p .",
    "test": "npm run lint && npm run mocha",
    "mocha": "npm run compile && bin/nyc-mocha --opts $npm_package_config_mochaOpts",
    "watch": "npm run clean && tsc-watch --onSuccess 'echo Compiled successfully!' --onFailure 'echo Compilation failed!'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "~4.1.5",
    "@types/chai-as-promised": "~7.1.0",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.1",
    "@types/mocha": "~2.2.48",
    "@types/node": "^10.11.0",
    "@types/sinon": "^5.0.2",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "madge": "~3.2.0",
    "mocha": "~5.0.5",
    "mocha-junit-reporter": "~1.18.0",
    "mocha-typescript": "~1.1.12",
    "nyc": "~13.0.1",
    "reflect-metadata": "^0.1.12",
    "sinon": "^6.3.4",
    "source-map-support": "^0.4.18",
    "testdouble": "^3.8.1",
    "tsc-watch": "^1.0.29",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3"
  },
  "peerDependencies": {
    "apollo-server-core": "~2.1.0"
  },
  "dependencies": {
    "@types/aws-xray-sdk-core": "git+https://github.com/Equiem/typescript-aws-xray-sdk-core.git#0.1.1",
    "@types/aws-xray-sdk-express": "git+https://github.com/Equiem/typescript-aws-xray-sdk-express.git#0.1.0",
    "apollo-server-env": "^2.0.3",
    "aws-xray-sdk-core": "^2.0.0",
    "aws-xray-sdk-express": "^2.0.0",
    "graphql": "^14.0.2",
    "graphql-extensions": "^0.2.1",
    "runtypes": "^2.1.6"
  },
  "config": {
    "mochaOpts": "mocha.opts"
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "checkCoverage": true,
    "branches": 64,
    "functions": 70,
    "lines": 70,
    "statements": 70,
    "watermarks": {
      "branches": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "lines": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "instrument": true
  }
}
